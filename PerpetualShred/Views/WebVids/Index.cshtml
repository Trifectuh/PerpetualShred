@model IEnumerable<WebVid>

@{
    ViewData["Title"] = "Index";
}

All the dope stuff currently in the database.
<p></p>

<p>
    <a asp-action="Create">Add more BRAAAP</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OriginUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Synopsis)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Synopsis)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
