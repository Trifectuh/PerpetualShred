@{
    Layout = null;
}

@model PerpetualShred.Models.WebVid

<html>
<head>
    <title>React Testbed</title>
    <link rel="stylesheet" href="~/css/ReactTest.css" type="text/css" />
</head>
<body>
    <div class="video-background">
        <iframe id="video" src="@Html.DisplayFor(model => model.PlayerUrl)" frameborder="0"></iframe>
    </div>
    <div id="sidebar">
        <h1>@Html.DisplayFor(model => model.Title)</h1>
        <p>
            @Html.DisplayFor(model => model.Synopsis)
            @if (Model.VideoService == "PinkBike"){ 
                <a href="@Html.DisplayFor(model => model.OriginUrl)" class="btn">more info at Pinkbike.com</a> 
            }
            
            @if (Model.VideoService == "YouTube"){ 
                <a href="@Html.DisplayFor(model => model.OriginUrl)" class="btn">more info at YouTube.com</a> 
            }

            @if (Model.VideoService == "Vimeo"){ 
                <a href="@Html.DisplayFor(model => model.OriginUrl)" class="btn">more info at Vimeo.com</a> 
            }

            @if (Model.VideoService == "PinkBike"){
                <button id="playpause" onclick="">Play/Pause</button>
            }
    </div>
    
</body>
</html>
<footer>
    
</footer>
